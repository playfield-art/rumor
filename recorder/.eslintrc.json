{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "airbnb",
    "airbnb-typescript",
    "prettier"
  ],
  "globals": {
    "NodeJS": true
  },
  "parser": "@typescript-eslint/parser",
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": false
    },
    "ecmaVersion": 12,
    "sourceType": "module",
    "project": "recorder/tsconfig.json"
  },
  "ignorePatterns": ["**/*.js"],
  "rules": {
    "prettier/prettier": "error",
    "import/prefer-default-export": "off",
    "no-underscore-dangle": "off",
    "no-empty-function": "off",
    "@typescript-eslint/no-empty-function": "off",
    "import/no-extraneous-dependencies": ["off", {"devDependencies": true}],
    "radix": "off",
    "no-unused-vars": "warn",
    "no-console": "off",
    "func-names": "off",
    "no-process-exit": "off",
    "object-shorthand": "off",
    "class-methods-use-this": "off"
  }
}